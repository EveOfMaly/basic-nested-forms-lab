<%= form_for @recipe do |f| %>

    <%= f.label :recipe_title  %>
    <%= f.text_field :title %>

    <h3>Add The Ingredients</h3>
    <%= f.fields_for :ingredients do |i|   %>
        <%= i.label :name  %>
        <%= i.text_field :name %>

        <%= i.label :quantity  %>
        <%= i.text_field :quantity %>
        <hr>
    <% end %>

    <%= f.submit %>
<% end %>
